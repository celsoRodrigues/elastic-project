# Count records in index
GET books/_count

# Get first index
GET books/_doc/1

# Get specific ids
GET books/_search
{
  "query": {
    "ids": {
      "values": [1,2]
    }
  }
}

# Get all
GET books/_search
{
  "query": {
    "match_all": {}
  }
}
# Another get all
GET books/_search

# Get book with exact author
GET books/_search
{
  "query": {
    "match": {
      "author": "joshua"
    }
  }
}

# Get book with partial author name
GET books/_search
{
  "query": {
    "prefix": {
      "author": {
        "value": "josh"
      }
    }
  }
}

# Changing the operator to AND
GET books/_search
{
  "query": {
    "match": {
      "author": {
        "query": "joshua schildt",
        "operator": "and"
      }
      
    }
  }  
  
}